<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:id="@+id/expand_menu_image"
        android:layout_width="@dimen/bar_height"
        android:layout_height="@dimen/bar_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/expand_menu_description" />

    <TextView
        android:id="@+id/group_menu_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/expand_menu_image"
        android:layout_toStartOf="@+id/expand_menu_image" />

</RelativeLayout>